generator client {
  provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Car {
  id      Int          @id @default(autoincrement())
  year    Int
  make    String
  model   String
  dougscore Int
  weekends Weekend[]
  dailies  Daily[]
}

model Weekend {
  id           Int     @id @default(autoincrement())
  styling      Int
  acceleration Int
  handling     Int
  funFact      Int
  coolFact     Int
  total        Int     @default(0)
  car          Car     @relation(fields: [carId], references: [id])
  carId        Int

  @@index([carId])
}

model Daily {
  id         Int     @id @default(autoincrement())
  features   Int
  comfort    Int
  quality    Int
  practical  Int
  value      Int
  total      Int?    @default(0)
  car        Car     @relation(fields: [carId], references: [id])
  carId      Int

  @@index([carId])
}
